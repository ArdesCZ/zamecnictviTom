
{block sluzby}
<!-- Sekce sluzby end -->
<section id="sluzby">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <br/>
            <h2 class="text-center">Služby</h2>
            <hr class="divider light my-4"/>
            <div class="card-deck">
                <div class="card">
                    <img src="{$basePath}/obrazky/ikony/kovovyroba.png" class="card-img-top" alt="kovovýroba">
                    <div class="card-body">
                        <br/>
                        <h6 class="card-title font-weight-bolder text-muted text-center">Zakázková kovovýroba</h6>
                    </div>
                </div>
                <div class="card">
                    <img src="{$basePath}/obrazky/ikony/schodiste.png" class="card-img-top" alt="schodiště">
                    <div class="card-body">
                        <br/>
                        <h6 class="card-title font-weight-bolder text-muted text-center">Schodiště</h6>
                    </div>
                </div>
                <div class="card">
                    <img src="{$basePath}/obrazky/ikony/vrata.png" class="card-img-top" alt="vrata">
                    <div class="card-body">
                        <br/>
                        <h6 class="card-title font-weight-bolder text-muted text-center"> Vrata / sekční / rolovací /
                            plechová / palubková</h6>
                    </div>
                </div>
                <div class="card">
                    <img src="{$basePath}/obrazky/ikony/brana.png" class="card-img-top" alt="brány">
                    <div class="card-body">
                        <br/>
